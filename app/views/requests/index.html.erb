<div class="container">
  <div class="row">
    <h1> Coworking Waiting List </h1>
  </div>
    <table class="table d-lg-table" >
      <thead>
        <tr>
          <th>Place </th>
          <th>First Name </th>
          <th class="d-none d-md-table-cell">Last Name </th>
          <th class="d-none d-md-table-cell">Phone </th>
          <th class="d-none d-sm-table-cell">Email </th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% @requests.sort.each do |request| %>
        <% if request.status == "confirmed"%>
        <tr>
          <td> <%= @counter += 1 %> </td>
          <td> <%= link_to "#{request.client_first_name}", request_path(request.id)%></td>
          <td class="d-none d-md-table-cell"><%=request.client_last_name%></td>
          <td class="d-none d-md-table-cell"> <%=request.phone%></td>
          <td class="d-none d-sm-table-cell"> <%=request.email%></td>
          <td> <%=request.status%></td>
          <%end%>
          <%end%>
        </tr>
      </tbody>
    </table>
</div>

